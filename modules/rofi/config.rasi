configuration {
  show-icons: true;
  drun-display-format: "{name}";
}

* {
  background: transparent;
  border: none;
  font: "JetBrainsMono Nerd Font 13";
  foreground: #cdd6f4;
  lightbg: transparent;
}

element {
  border-radius: 12px;
  padding: 12px;
}

element normal.normal,
element alternate.normal {
  background-color: transparent;
  text-color: #cdd6f4;
}

element selected.normal,
element selected.alternate,
element selected.active {
  background-color: #cba6f7;
  text-color: #181825;
}

element-text {
  font-size: 16px;
}

entry {
  padding: 10px;
  placeholder: "Search...";
}

inputbar {
  children: [textbox-prompt-colon, entry];
}

listview {
  border: 0;
  lines: 6;
  scrollbar: false;
  spacing: 12px;
}

mainbox {
  spacing: 16px;
}

scrollbar {
  handle-border-radius: 8px;
}

textbox-prompt-colon {
  background-color: #cba6f7;
  border-radius: 12px;
  color: #181825;
  font: "JetBrainsMono Nerd Font Mono 18";
  padding: 6px 18px;
  str: "ï€‚";
}

window {
  background-color: #181825;
  border: none;
  border-radius: 16px;
  padding: 20px;

  width: 30%;
}
